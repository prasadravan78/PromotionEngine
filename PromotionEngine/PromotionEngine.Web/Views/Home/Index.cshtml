@{
    ViewData["Title"] = "Home Page";
}

@model PromotionEngine.Web.ViewModels.IndexViewModel

<div class="container">
    <div style="color: red">Add products and click on Get Price button to check promotion price.</div>
</div>
<div class="container">
    @if (Model != null)
    {
        if (Model.Products != null &&
            Model.Products.Any())
        {
            foreach (var product in Model.Products)
            {
                <div class="row">
                    <div class="col-md-1 offset-2">
                        @product.Name
                    </div>
                    <div class="col-md-4">
                        <input class="form-control" type="number" data-id="@product.Id" />
                    </div>
                </div>
            }
            <div>
                <div class="col-md-6 offset-3">
                    <button id="getTotalPrice" class="btn btn-primary">Get Price</button>
                </div>
            </div>
        }
    }
</div>

